<?xml version="1.0" encoding="UTF-8"?>
<switchyard xmlns="urn:switchyard-config:switchyard:1.0" xmlns:bean="urn:switchyard-component-bean:config:1.0" xmlns:camel="urn:switchyard-component-camel:config:1.0" xmlns:jca="urn:switchyard-component-jca:config:1.0" xmlns:jms="urn:switchyard-component-camel-jms:config:1.0" xmlns:resteasy="urn:switchyard-component-resteasy:config:1.0" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" name="switchyard-quickstart-jca-outbound-activemq">
  <sca:composite name="jca-outbound-activemq" targetNamespace="urn:switchyard-quickstart:jca-outbound-activemq:0.1.0">
    <sca:component name="EchoClientServiceBean">
      <bean:implementation.bean class="org.switchyard.quickstarts.jca.outbound.EchoClientServiceBean"/>
      <sca:service name="EchoClientService">
        <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoClientService"/>
      </sca:service>
      <sca:reference name="EchoReference">
        <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoReference"/>
      </sca:reference>
    </sca:component>
    <sca:service name="EchoClientService" promote="EchoClientServiceBean/EchoClientService">
      <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoClientService"/>
      <resteasy:binding.rest name="restEcho">
        <resteasy:interfaces>org.switchyard.quickstarts.jca.outbound.EchoResource</resteasy:interfaces>
        <resteasy:contextPath>echo</resteasy:contextPath>
      </resteasy:binding.rest>
    </sca:service>
    <sca:component name="EchoServiceBean">
      <bean:implementation.bean class="org.switchyard.quickstarts.jca.outbound.EchoServiceBean"/>
      <sca:service name="EchoService">
        <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoService"/>
      </sca:service>
    </sca:component>
    <sca:service name="EchoService" promote="EchoServiceBean/EchoService">
      <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoService"/>
      <jms:binding.jms name="echoProxyService">
        <operationSelector operationName="echo"/>
        <jms:queue>queue/Echo.in</jms:queue>
        <jms:connectionFactory>#activemq/ConnectionFactory</jms:connectionFactory>
        <jms:replyTo>queue/Echo.out</jms:replyTo>
      </jms:binding.jms>
    </sca:service>
    <sca:component name="EchoProxyServiceBean">
      <bean:implementation.bean class="org.switchyard.quickstarts.jca.outbound.EchoProxyServiceBean"/>
      <sca:service name="EchoProxyService">
        <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoProxyService"/>
      </sca:service>
      <sca:reference name="EchoProxyServiceReference">
        <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoProxyServiceReference"/>
      </sca:reference>
    </sca:component>
    <sca:service name="EchoProxyService" promote="EchoProxyServiceBean/EchoProxyService">
      <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoProxyService"/>
      <jms:binding.jms name="echoProxyService">
        <jms:queue>queue/Echo.proxy.in</jms:queue>
        <jms:connectionFactory>#activemq/ConnectionFactory</jms:connectionFactory>
        <jms:replyTo>queue/Echo.proxy.out</jms:replyTo>
      </jms:binding.jms>
    </sca:service>
    <sca:reference name="EchoProxyServiceReference" multiplicity="0..1" promote="EchoProxyServiceBean/EchoProxyServiceReference">
      <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoProxyServiceReference"/>
      <jms:binding.jms name="echoProxyServiceReference">
        <jms:queue>queue/Echo.in</jms:queue>
        <jms:connectionFactory>#activemq/ConnectionFactory</jms:connectionFactory>
        <jms:replyTo>queue/Echo.out</jms:replyTo>
      </jms:binding.jms>
    </sca:reference>
    <sca:component name="CamelServiceRoute">
      <camel:implementation.camel>
        <camel:java class="org.switchyard.quickstarts.jca.outbound.CamelServiceRoute"/>
      </camel:implementation.camel>
      <sca:service name="CamelService">
        <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.CamelService"/>
      </sca:service>
      <sca:reference name="EchoClientService">
        <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoClientService"/>
      </sca:reference>
    </sca:component>
    <sca:service name="CamelService" promote="CamelServiceRoute/CamelService">
      <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.CamelService"/>
      <resteasy:binding.rest name="rest1">
        <resteasy:interfaces>org.switchyard.quickstarts.jca.outbound.CamelEchoResource</resteasy:interfaces>
        <resteasy:contextPath>camel</resteasy:contextPath>
      </resteasy:binding.rest>
    </sca:service>
    <sca:reference name="EchoReference" multiplicity="0..1" promote="EchoClientServiceBean/EchoReference">
      <sca:interface.java interface="org.switchyard.quickstarts.jca.outbound.EchoReference"/>
      <jms:binding.jms name="echoReference">
        <jms:queue>queue/Echo.proxy.in</jms:queue>
        <jms:connectionFactory>#activemq/ConnectionFactory</jms:connectionFactory>
        <jms:replyTo>queue/Echo.proxy.out</jms:replyTo>
        <jms:transacted>true</jms:transacted>
        <jms:transactionManager>#jtaTransactionManager</jms:transactionManager>
      </jms:binding.jms>
    </sca:reference>
  </sca:composite>
  <domain>
    <properties>
      <property name="org.switchyard.handlers.messageTrace.enabled" value="false"/>
    </properties>
  </domain>
</switchyard>